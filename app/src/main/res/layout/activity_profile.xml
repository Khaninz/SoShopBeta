<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="soshop.social.soshop.ProfileActivity">

    <ImageView
        android:id="@+id/coverImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#009999"

        />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"

        />

    <TextView
        android:id="@+id/profileName"
        android:text="First Last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profileImage"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/friendsNumber"
        android:layout_below="@+id/profileName"
        android:layout_marginTop="@dimen/number_top_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/number_horizontal_margin"
        android:layout_marginStart="@dimen/number_horizontal_margin"

        />
    <TextView
        android:id="@+id/communitiesNumber"
        android:layout_below="@+id/profileName"
        android:layout_marginTop="@dimen/number_top_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/friendsNumber"
        android:layout_marginLeft="@dimen/number_horizontal_margin"/>
    <TextView
        android:id="@+id/postNumber"
        android:layout_below="@+id/profileName"
        android:layout_marginTop="@dimen/number_top_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@+id/voteNumber"
        android:layout_marginRight="@dimen/number_horizontal_margin"/>
    <TextView
        android:id="@+id/voteNumber"
        android:layout_below="@+id/profileName"
        android:layout_marginTop="@dimen/number_top_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/number_horizontal_margin"

        />

    <TextView
        android:layout_below="@+id/friendsNumber"
        android:text="Friends"
        android:layout_alignLeft="@+id/friendsNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/communitiesNumber"
        android:layout_alignLeft="@+id/communitiesNumber"
        android:text="Communities"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postNumber"
        android:layout_alignLeft="@+id/postNumber"
        android:text="Post"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/voteNumber"
        android:layout_alignLeft="@+id/voteNumber"
        android:text="Vote"
        />

</RelativeLayout>
